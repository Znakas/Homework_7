<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
    android:padding="5dp">
        <LinearLayout
            android:id="@+id/item1_layout"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:layout_margin="10dp"
            android:background="@drawable/item_checked">
            <LinearLayout
                android:id="@+id/top1_layout"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="8dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/title1"
                    style="@style/ItemTitleStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/item_1"/>
                <TextView
                    android:id="@+id/settings1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick1"
                    android:background="@drawable/ic_settings"/>
            </LinearLayout>
            <TextView
                style="@style/ItemTextStyle"
                android:id="@+id/textViewitem_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/contentDisableColor"
                android:text="@string/text_item1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item2_layout"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="0dp"
            android:layout_margin="10dp"
            android:background="@drawable/item_unchecked">
            <LinearLayout
                android:id="@+id/top2_layout"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="8dp" android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/title2"
                    style="@style/ItemTitleStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/item_2"/>
                <TextView
                    android:id="@+id/settings2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:onClick="onClick2"
                    android:background="@drawable/ic_settings"/>
            </LinearLayout>
            <TextView
                style="@style/ItemTextStyle"
                android:id="@+id/textViewitem_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textDisableColor"
                android:text="@string/text_item2" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/item3_layout"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="0dp"
            android:layout_margin="10dp"
            android:background="@drawable/item_unchecked">
            <LinearLayout
                android:id="@+id/top3_layout"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/title3"
                    style="@style/ItemTitleStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/item_3"/>
                <TextView
                    android:id="@+id/settings3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:onClick="onClick3"
                    android:background="@drawable/ic_settings"/>
            </LinearLayout>
            <TextView
                style="@style/ItemTextStyle"
                android:id="@+id/textViewitem_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textDisableColor"
                android:text="@string/text_item3" />
        </LinearLayout>
    </LinearLayout>